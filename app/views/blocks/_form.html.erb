<%= form_with(model: block) do |form| %>
  <% if block.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(block.errors.count, "error") %> prohibited this block from being saved:</h2>

      <ul>
        <% block.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :block_number, style: "display: block" %>
    <%= form.text_field :block_number %>
  </div>

  <div>
    <%= form.label :block_name, style: "display: block" %>
    <%= form.text_field :block_name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
