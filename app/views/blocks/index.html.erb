<h1>Blocks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Block Number</th>
      <th>Block Name</th>
      <th>Description</th>
      <th>Associated Models</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.block_number %></td>
        <td><%= block.block_name %></td>
        <td><%= block.description %></td>
        <td>
          <% block.models.each do |model| %>
            <span class="badge bg-primary"><%= model.model_code %></span>
          <% end %>
        </td>
        <td><%= link_to 'Show', block, class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Edit', edit_block_path(block), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', block, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Block', new_block_path, class: 'btn btn-primary' %>
