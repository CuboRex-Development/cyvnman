<div class="card border-0 shadow-sm rounded-3 p-3 mb-4">
  <div class="card-body">
    <h1 class="card-title h3 mb-4">Comparison Result</h1>

    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Part Number</th>
            <% @selected_blocks.each do |block| %>
              <th class="text-center"><%= link_to block.block_number, block, class: "text-decoration-none" %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @parts.each do |part| %>
            <tr>
              <td><%= link_to part.part_number, part, class: "text-decoration-none" %></td>
              <% @selected_blocks.each do |block| %>
                <td class="text-center">
                  <% if block.parts.include?(part) %>
                    <%= link_to part, class: "text-decoration-none" do %>
                      <span class="badge bg-primary rounded-pill">âœ“</span>
                    <% end %>
                  <% else %>
                    <span class="badge bg-light text-dark rounded-pill">-</span>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= link_to 'Back to Comparison', comparisons_path, class: 'btn btn-outline-primary mt-3' %>
  </div>
</div>