<h1>Comparison</h1>

<%= form_with url: compare_comparisons_path, method: :get, local: true do |form| %>
  <div class="mb-3">
    <label for="block-search" class="form-label">Search Blocks:</label>
    <input type="text" id="block-search" class="form-control" placeholder="Type to search...">
  </div>

  <div class="mb-3">
    <label class="form-label">Select to Compare:</label>
    <div id="block-list" class="list-group" style="max-height: 300px; overflow-y: auto;">
      <% @blocks.each do |block| %>
        <label class="list-group-item">
          <%= check_box_tag 'block_ids[]', block.id, false, class: 'form-check-input me-1' %>
          <%= block.block_number %> - <%= block.block_name %>
        </label>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <span id="selected-count">0</span> blocks selected
  </div>

  <%= form.submit "Compare", class: "btn btn-outline-primary", id: "compare-button", disabled: true %>
<% end %>