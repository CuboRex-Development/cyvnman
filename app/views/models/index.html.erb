<h1>Models</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Model Code</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.model_code %></td>
        <td><%= model.description %></td>
        <td><%= model.type.type_name %></td>
        <td><%= link_to 'Show', model, class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Edit', edit_model_path(model), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Model', new_model_path, class: 'btn btn-primary' %>
