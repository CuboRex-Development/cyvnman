<h1>Models</h1>

<div class="mb-3">
  <%= form_with(url: models_path, method: :get, local: true) do |form| %>
    <div class="input-group">
      <%= form.text_field :search, value: params[:search], class: "form-control", placeholder: "Search Models" %>
      <div class="input-group-append">
        <%= form.submit "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<table class="table table-bordered table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Model Code</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= link_to model.model_code, model %></td>
        <td><%= model.description %></td>
        <td><%= link_to model.type.type_name, model.type %></td>
        <td><%= link_to 'Edit', edit_model_path(model), class: "btn btn-outline-warning btn-sm" %></td>
        <td><%= button_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Model', new_model_path, class: "btn btn-success" %>
