<h1>Parts</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Part Number</th>
      <th>Part Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.part_number %></td>
        <td><%= part.part_name %></td>
        <td><%= part.description %></td>
        <td><%= link_to 'Show', part, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_part_path(part), class: "btn btn-outline-warning btn-sm" %></td>
        <td><%= button_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Part', new_part_path, class: "btn btn-success" %>
