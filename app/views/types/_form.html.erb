<%= form_with(model: type, local: true) do |form| %>
  <% if type.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(type.errors.count, "error") %> prohibited this type from being saved:</h2>
      <ul>
        <% type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :type_number, class: "form-label" %>
    <%= form.text_field :type_number, class: "form-control", placeholder: "Enter type number" %>
  </div>

  <div class="mb-3">
    <%= form.label :type_name, class: "form-label" %>
    <%= form.text_field :type_name, class: "form-control", placeholder: "Enter type name" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter type description" %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Type', class: "btn btn-primary" %>
  </div>
<% end %>
