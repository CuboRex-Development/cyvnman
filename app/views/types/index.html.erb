<h1>Types</h1>

<div class="mb-3">
  <%= search_form_for @q, url: types_path, method: :get, local: true do |form| %>
    <div class="input-group">
      <%= form.text_field :type_name_or_type_number_cont, class: "form-control", placeholder: "Search Types" %>
      <div class="input-group-append">
        <%= form.submit "Search", class: "btn btn-outline-primary" %>
      </div>
    </div>
  <% end %>
</div>

<table class="table shadow table-hover table-responsive">
  <thead class="table-light">
    <tr>
      <th>Type Name</th>
      <th>Type Number</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= link_to type.type_name, type %></td>
        <td><%= type.type_number %></td>
        <td><%= type.description %></td>
        <td><%= link_to 'Edit', edit_type_path(type), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= button_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Type', new_type_path, class: "btn btn-outline-primary" %>
