<p class="text-success"><%= notice %></p>

<%= render @type %>

<h2>Related Models and Blocks</h2>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Block Number / Model Code</th>
      <% @type.models.each do |model| %>
        <th><%= model.model_code %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @type.blocks.each do |block| %>
      <tr>
        <td><%= block.block_number %></td>
        <% @type.models.each do |model| %>
          <td class="text-center">
            <% if model.blocks.include?(block) %>
              âœ…
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-3">
  <%= link_to "Edit this type", edit_type_path(@type), class: "btn btn-warning" %>
  <%= link_to "Back to types", types_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this type", @type, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
