<h1>Type: <%= @type.type_name %></h1>

<div class="card mb-3">
  <div class="card-header">
    Type Details
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @type.type_number %></h5>
    <p class="card-text"><strong>Type Name:</strong> <%= @type.type_name %></p>
    <p class="card-text"><strong>Description:</strong> <%= @type.description %></p>
  </div>
</div>

<h2>Related Models and Blocks</h2>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Block Number / Model Code</th>
      <% @type.models.each do |model| %>
        <th><%= link_to model.model_code, model %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @type.blocks.each do |block| %>
      <tr>
        <td><%= link_to block.block_number, block %></td>
        <% @type.models.each do |model| %>
          <td class="text-center">
            <% if model.blocks.include?(block) %>
              <%= link_to 'âœ…', block %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-3">
  <%= link_to 'Edit', edit_type_path(@type), class: "btn btn-warning" %>
  <%= link_to 'Back to Types', types_path, class: "btn btn-secondary" %>
  <%= button_to 'Destroy', @type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
