<h1>Version: <%= @version.version_number %></h1>

<div class="card mb-3">
  <div class="card-header">
    Version Details
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @version.version_number %></h5>
    <p class="card-text"><strong>Description:</strong> <%= @version.description %></p>
    <p class="card-text"><strong>Part:</strong> <%= link_to @version.part.part_name, @version.part %></p>
    <p class="card-text"><strong>File Path:</strong> <%= @version.file_path %></p>
    <p class="card-text"><strong>Scale:</strong> <%= @version.scale %></p>
    <p class="card-text"><strong>Sheet Size:</strong> <%= @version.sheet_size %></p>
    <p class="card-text"><strong>Unit:</strong> <%= @version.unit %></p>
    <p class="card-text"><strong>Drawn By:</strong> <%= @version.drawn_by %></p>
    <p class="card-text"><strong>Checked By:</strong> <%= @version.checked_by %></p>
    <p class="card-text"><strong>Approved By:</strong> <%= @version.approved_by %></p>
    <p class="card-text"><strong>Drawn Date:</strong> <%= @version.drawn_date %></p>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit', edit_version_path(@version), class: "btn btn-warning" %>
  <%= link_to 'Back to Versions', versions_path, class: "btn btn-secondary" %>
  <%= button_to 'Destroy', @version, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
